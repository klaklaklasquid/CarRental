<Window x:Class="CarRental.DataInjectionPresentation.Windows.InjectDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.DataInjectionPresentation.Windows"
        mc:Ignorable="d"
        Title="InjectDataWindow" 
        Height="450" 
        Width="800"
        MinHeight="50"
        MinWidth="90">
    <Grid Background="LightGray">
        <Border Margin="10, 10, 10, 10"
                BorderBrush="#40000000"
                BorderThickness="1"
                CornerRadius="20"
                Background="white">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Upload Files"
                   FontSize="20"
                   FontWeight="Bold"/>

                <Border Grid.Row="1"
                        Margin="50,10,50,10"
                        BorderBrush="#323cb4"
                        BorderThickness="2"
                        CornerRadius="10">

                </Border>
                
                <Border Grid.Row="2"
                        Margin="50,10,50,10"
                        BorderBrush="#323cb4"
                        BorderThickness="2"
                        CornerRadius="10">

                </Border>
                <Border Grid.Row="3"
                        Margin="50,10,50,10"
                        BorderBrush="#323cb4"
                        BorderThickness="2"
                        CornerRadius="10">

                </Border>
                <Border Grid.Row="4"
                        Margin="50,10,50,10"
                        Background="#323cb4"
                        CornerRadius="10">

                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
