<Window x:Class="CarRental.DataInjectionPresentation.Windows.InjectDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.DataInjectionPresentation.Windows"
        mc:Ignorable="d"
        Title="InjectDataWindow" 
        Height="450" 
        Width="800"
        >
    <Grid Background="LightGray">
        <Border Margin="10, 10, 10, 10"
                BorderBrush="#40000000"
                BorderThickness="1"
                CornerRadius="20"
                Background="white">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Upload Files"
                   FontSize="20"
                   FontWeight="Bold"/>

                <Border Grid.Row="1"
                        Margin="150,10,150,10"
                        BorderBrush="#3087ED"
                        BorderThickness="2"
                        CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                >
                        <TextBox x:Name="FilePathEstablishment" 
                                 IsReadOnly="True" 
                                 Width="auto"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextChanged="FilledIn"
                                 
                                 />
                        <Border CornerRadius="10"
                                Background="#3087ED"
                                Margin="10"
                                >
                            <Button Content="Browse... Establishments"
                                    Background="Transparent"
                                    Padding="20,5"
                                    Foreground="white"
                                    FontSize="15"
                                    BorderThickness="0"
                                    Click="Click_Select_Establishment"
                              />
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2"
                        Margin="150,10,150,10"
                        BorderBrush="#3087ED"
                        BorderThickness="2"
                        CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                >
                        <TextBox x:Name="FilePathCar" 
                                 IsReadOnly="True" 
                                 Width="auto"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextChanged="FilledIn"
                                 
                                 />
                        <Border CornerRadius="10"
                                Background="#3087ED"
                                Margin="10"
                                >
                            <Button Content="Browse... Cars"
                                    Background="Transparent"
                                    Padding="20,5"
                                    Foreground="white"
                                    FontSize="15"
                                    BorderThickness="0"
                                    Click="Click_Select_Car"
                              />
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3"
                        Margin="150,10,150,10"
                        BorderBrush="#3087ED"
                        BorderThickness="2"
                        CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                >
                        <TextBox x:Name="FilePathCustomer" 
                                 IsReadOnly="True" 
                                 Width="auto"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextChanged="FilledIn"
                                 />
                        <Border CornerRadius="10"
                                Background="#3087ED"
                                Margin="10"
                                >
                            <Button Content="Browse... Customers"
                                    Background="Transparent"
                                    Padding="20,5"
                                    Foreground="white"
                                    FontSize="15"
                                    BorderThickness="0"
                                    Click="Click_Select_Customer"
                              />
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Row="4"
                        Margin="150,10,150,10"
                        Background="#3087ED"
                        CornerRadius="10">
                    <Button Background="Transparent"
                            x:Name="Send_Data"
                            BorderThickness="0"
                            Content="Send Data"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            IsEnabled="False" Click="Click_Send_Data"
                            />

                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
