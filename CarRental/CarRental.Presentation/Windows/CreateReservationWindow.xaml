<Window x:Class="CarRental.Presentation.Windows.CreateReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.Presentation.Windows"
        mc:Ignorable="d"
        Title="CreateReservationWindow" Height="450" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- listview for establishments -->
        <TextBlock Text="Establishments"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <ListView x:Name="establishmentsListName"
                  Grid.Row="2"
                  Grid.Column="0" SelectionChanged="HandleChangeList"/>

        <!-- listview for cars -->
        <TextBlock Text="Cars"
                   Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <ListView x:Name="carsListName"
                  Grid.Row="2"
                  Grid.Column="1"/>

        <!-- reservation details -->
        <TextBlock Text="Reservation"
                   Grid.Row="0"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <Grid Grid.Row="2"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <!-- data info -->
            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Orientation="Vertical">
                <!-- name of customer -->
                <TextBlock Text="Name:"
                           FontSize="20"
                           FontWeight="Light"/>
                <TextBlock Text=""
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForName"/>

                <!-- airport information -->
                <TextBlock Text="Airport:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Placeholder for details Airport"
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForAirport"/>

                <!-- Car information -->
                <TextBlock Text="Car:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Placeholder for car info"
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForCar"/>
                
                <!-- Date info -->
                <TextBlock Text="Date:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="01-01-2000"
                               FontSize="20"
                               FontWeight="Light"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="02-01-2000"
                               FontSize="20"
                               FontWeight="Light"
                               Margin="50,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Confirm button -->
            <Border Grid.Row="1"
                    CornerRadius="10"
                    BorderThickness="0"
                    Background="#3087ED">
                <Button Background="Transparent"
                        Content="Make the reservation"
                        FontSize="24"
                        FontWeight="Light"
                        Foreground="#fff"
                        BorderThickness="0"/>
            </Border>
        </Grid>
    </Grid>
</Window>
