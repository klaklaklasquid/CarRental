<Window x:Class="CarRental.Presentation.Windows.CreateReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.Presentation.Windows"
        mc:Ignorable="d"
        Title="CreateReservationWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- listview for establishments -->
        <TextBlock Text="Establishments"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <ListView x:Name="establishmentsListName"
                  Grid.Row="2"
                  Grid.Column="0" SelectionChanged="HandleChangeList"/>
        
        <!-- listview for cars -->
        <TextBlock Text="Cars"
                   Grid.Row="1"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <ListView x:Name="carsListName"
                  Grid.Row="2"
                  Grid.Column="1"/>
    </Grid>
</Window>
