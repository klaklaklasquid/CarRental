<Window x:Class="CarRental.Presentation.Windows.CreateReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.Presentation.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CreateReservationWindow" Height="450" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- listview for establishments -->
        <TextBlock Text="Establishments"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <ListView x:Name="establishmentsListName"
                  Grid.Row="2"
                  Grid.Column="0" 
                  SelectionChanged="HandleChangeList"/>

        <!-- listview for cars -->
        <TextBlock Text="Cars"
                   Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>
        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Number of seats:" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Light"/>

            <CheckBox IsChecked="False" 
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      x:Name="checkboxForSeat"
                      HorizontalAlignment="Center"
                      Checked="checkboxForSeat_Checked"
                      Unchecked="checkboxForSeat_Unchecked"/>

            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center"
                        IsHitTestVisible="True"
                        Focusable="True"
                        x:Name="stackpanelForSlider"
                        Opacity="0.3"
                        >
                <Slider x:Name="valueSlider" 
                        Minimum="2" 
                        Maximum="10" 
                        TickFrequency="1" 
                        IsSnapToTickEnabled="True"
                        Value="2"
                       ValueChanged="valueSlider_ValueChanged"/>
                <TextBlock Text="{Binding ElementName=valueSlider, Path=Value, Mode=OneWay}" />
            </StackPanel>

        </Grid>

        <ListView x:Name="carsListName"
                  Grid.Row="2"
                  Grid.Column="1"
                  SelectionChanged="HandleChangeCarList"
                  
                  Opacity="1"/>

        <TextBlock Text="No cars found"
                   FontSize="20"
                   FontWeight="Light"
                   Grid.Column="1"
                   Grid.Row="2"
                   Margin="50,0,50,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Opacity="1"
                   x:Name="carListError"
                   TextWrapping="Wrap"
                   />

        <!-- reservation details -->
        <TextBlock Text="Reservation"
                   Grid.Row="0"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   FontWeight="Light"/>

        <!-- date pickers -->
        <Grid Grid.Row="1"
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <DatePicker Grid.Column="0"
                        DisplayDateStart="{x:Static sys:DateTime.Today}"
                        x:Name="startDatePicker"
                        SelectedDateChanged="startDatePicker_SelectedDateChanged"/>
            <DatePicker Grid.Column="1"
                        x:Name="endDatePicker"
                        SelectedDateChanged="endDatePicker_SelectedDateChanged"/>
        </Grid>


        <Grid Grid.Row="2"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <!-- data info -->
            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Orientation="Vertical">
                <!-- name of customer -->
                <TextBlock Text="Name:"
                           FontSize="20"
                           FontWeight="Light"/>
                <TextBlock Text=""
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForName"/>

                <!-- airport information -->
                <TextBlock Text="Airport:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <TextBlock Text=""
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForAirport"
                           />

                <!-- Car information -->
                <TextBlock Text="Car:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <TextBlock Text=""
                           FontSize="20"
                           FontWeight="Light"
                           x:Name="placeholderForCar"/>

                <!-- Date info -->
                <TextBlock Text="Date:"
                           FontSize="20"
                           FontWeight="Light"
                           Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=""
                               FontSize="20"
                               FontWeight="Light"
                               HorizontalAlignment="Left"
                               x:Name="placeholderStartDate"/>
                    <TextBlock Text=""
                               FontSize="20"
                               FontWeight="Light"
                               Margin="50,0,0,0"
                               x:Name="placeholderEndDate"/>
                </StackPanel>
            </StackPanel>

            <!-- Confirm button -->
            <Border Grid.Row="1"
                    CornerRadius="10"
                    BorderThickness="0"
                    Background="#3087ED">
                <Button Background="Transparent"
                        Content="Make the reservation"
                        FontSize="24"
                        FontWeight="Light"
                        Foreground="#fff"
                        BorderThickness="0"
                        Click="Button_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
