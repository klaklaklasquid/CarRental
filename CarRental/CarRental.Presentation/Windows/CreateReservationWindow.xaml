<Window
    x:Class="CarRental.Presentation.Windows.CreateReservationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CarRental.Presentation.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="CreateReservationWindow"
    Width="1200"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  listview for establishments  -->
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Light"
            Text="Establishments" />

        <ListView
            x:Name="establishmentsListName"
            Grid.Row="2"
            Grid.Column="0"
            SelectionChanged="HandleChangeList" />

        <!--  listview for cars  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Light"
            Text="Cars" />
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Light"
                Text="Number of seats:" />

            <CheckBox
                x:Name="checkboxForSeat"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Checked="checkboxForSeat_Checked"
                IsChecked="False"
                Unchecked="checkboxForSeat_Unchecked" />

            <StackPanel
                x:Name="stackpanelForSlider"
                Grid.Column="2"
                VerticalAlignment="Center"
                Focusable="True"
                IsHitTestVisible="True"
                Opacity="0.3">
                <Slider
                    x:Name="valueSlider"
                    IsSnapToTickEnabled="True"
                    Maximum="10"
                    Minimum="2"
                    TickFrequency="1"
                    ValueChanged="valueSlider_ValueChanged"
                    Value="2" />
                <TextBlock Text="{Binding ElementName=valueSlider, Path=Value, Mode=OneWay}" />
            </StackPanel>

        </Grid>

        <ListView
            x:Name="carsListName"
            Grid.Row="2"
            Grid.Column="1"
            Opacity="1"
            SelectionChanged="HandleChangeCarList" />

        <TextBlock
            x:Name="carListError"
            Grid.Row="2"
            Grid.Column="1"
            Margin="50,0,50,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Light"
            Opacity="1"
            Text="No cars found"
            TextWrapping="Wrap" />

        <!--  reservation details  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Light"
            Text="Reservation" />

        <!--  date pickers  -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <DatePicker
                x:Name="startDatePicker"
                Grid.Column="0"
                DisplayDateStart="{x:Static sys:DateTime.Today}"
                SelectedDateChanged="startDatePicker_SelectedDateChanged" />
            <DatePicker
                x:Name="endDatePicker"
                Grid.Column="1"
                SelectedDateChanged="endDatePicker_SelectedDateChanged" />
        </Grid>


        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>

            <!--  data info  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Vertical">
                <!--  name of customer  -->
                <TextBlock
                    FontSize="20"
                    FontWeight="Light"
                    Text="Name:" />
                <TextBlock
                    x:Name="placeholderForName"
                    FontSize="20"
                    FontWeight="Light"
                    Text="" />

                <!--  airport information  -->
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Airport:" />
                <TextBlock
                    x:Name="placeholderForAirport"
                    FontSize="20"
                    FontWeight="Light"
                    Text="" />

                <!--  Car information  -->
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Car:" />
                <TextBlock
                    x:Name="placeholderForCar"
                    FontSize="20"
                    FontWeight="Light"
                    Text="" />

                <!--  Date info  -->
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Date:" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="placeholderStartDate"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        FontWeight="Light"
                        Text="" />
                    <TextBlock
                        x:Name="placeholderEndDate"
                        Margin="50,0,0,0"
                        FontSize="20"
                        FontWeight="Light"
                        Text="" />
                </StackPanel>
            </StackPanel>

            <!--  Confirm button  -->
            <Border
                Grid.Row="1"
                Background="#3087ED"
                BorderThickness="0"
                CornerRadius="10">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="Make the reservation"
                    FontSize="24"
                    FontWeight="Light"
                    Foreground="#fff" />
            </Border>
        </Grid>
    </Grid>
</Window>
