<Window
    x:Class="CarRental.Presentation.Windows.CreateReservationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CarRental.Presentation.Windows"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Create Reservation"
    Width="1200"
    Height="600"
    MinWidth="800"
    MinHeight="500"
    Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="3*" />
            <!--  Minder brede rechterzijde  -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Section Titles  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#3087ED"
            Text="Establishments" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#3087ED"
            Text="Cars" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#3087ED"
            Text="Reservation" />

        <!--  Establishments List  -->
        <ListView
            x:Name="establishmentsListName"
            Grid.Row="2"
            Grid.Column="0"
            Margin="10"
            SelectionChanged="HandleChangeList" />

        <!--  Cars Section  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontSize="16"
                Text="Number of seats:" />
            <CheckBox
                x:Name="checkboxForSeat"
                VerticalAlignment="Center"
                Checked="checkboxForSeat_Checked"
                Unchecked="checkboxForSeat_Unchecked" />
            <StackPanel
                x:Name="stackpanelForSlider"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Opacity="0.7"
                Orientation="Vertical">
                <Slider
                    x:Name="valueSlider"
                    Width="120"
                    IsSnapToTickEnabled="True"
                    Maximum="10"
                    Minimum="2"
                    TickFrequency="1"
                    ValueChanged="valueSlider_ValueChanged"
                    Value="2" />
                <TextBlock HorizontalAlignment="Center" Text="{Binding ElementName=valueSlider, Path=Value}" />
            </StackPanel>
        </StackPanel>

        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="10">
            <ListView x:Name="carsListName" SelectionChanged="HandleChangeCarList" />
            <TextBlock
                x:Name="carListError"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="Red"
                Text="No cars found"
                Visibility="Collapsed" />
        </Grid>

        <!--  Reservation Details  -->
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="10"
            VerticalAlignment="Top">
            <!--  Date Pickers  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <DatePicker
                    x:Name="startDatePicker"
                    Width="150"
                    Margin="0,0,10,0"
                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                    SelectedDateChanged="startDatePicker_SelectedDateChanged" />
                <DatePicker
                    x:Name="endDatePicker"
                    Width="150"
                    SelectedDateChanged="endDatePicker_SelectedDateChanged" />
            </StackPanel>

            <!--  Reservation Info  -->
            <TextBlock FontWeight="Bold" Text="Name:" />
            <TextBlock x:Name="placeholderForName" Margin="0,0,0,10" />

            <TextBlock FontWeight="Bold" Text="Airport:" />
            <TextBlock x:Name="placeholderForAirport" Margin="0,0,0,10" />

            <TextBlock FontWeight="Bold" Text="Car:" />
            <TextBlock x:Name="placeholderForCar" Margin="0,0,0,10" />

            <TextBlock FontWeight="Bold" Text="Date:" />
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="placeholderStartDate" />
                <TextBlock Text=" - " />
                <TextBlock x:Name="placeholderEndDate" />
            </StackPanel>
        </StackPanel>

        <!--  Confirm Button  -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Width="250"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Background="#3087ED"
            CornerRadius="8">
            <Button
                Padding="10"
                Background="Transparent"
                BorderThickness="0"
                Click="Button_Click"
                Content="Make the reservation"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </Border>
    </Grid>
</Window>
