<Window
    x:Class="CarRental.Presentation.Windows.ChooseOptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Welcome"
    Width="300"
    Height="400"
    MinWidth="300"
    MinHeight="400"
    Background="#f9f9f9"
    WindowStartupLocation="CenterScreen"
    Closing="Window_Closing">

    <Window.Resources>
        <!--  Herbruikbare stijl voor de knoppen  -->
        <Style x:Key="OptionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3087ED" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Welcome message  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,20,0,10"
            HorizontalAlignment="Center"
            FontSize="22"
            FontWeight="Bold"
            Text="Welcome to Car Rental" />

        <!--  Username  -->
        <TextBlock
            x:Name="userName"
            Grid.Row="1"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="16"
            FontStyle="Italic"
            Text="UserName" />

        <!--  Options  -->
        <StackPanel
            Grid.Row="2"
            Width="250"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <Button
                Click="Button_Click"
                Content="Make a Reservation"
                Style="{StaticResource OptionButtonStyle}"
                Tag="1" />

            <Button
                Click="Button_Click"
                Content="View All Reservations"
                Style="{StaticResource OptionButtonStyle}"
                Tag="2" />

            <Button
                Click="Button_Click"
                Content="View All Cars"
                Style="{StaticResource OptionButtonStyle}"
                Tag="3" />

        </StackPanel>
    </Grid>
</Window>
