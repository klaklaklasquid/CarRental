<Window
    x:Class="CarRental.Presentation.Windows.ChooseOptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CarRental.Presentation.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChooseOptionWindow"
    Width="250"
    Height="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  welcome message  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Light"
            Opacity="1"
            Text="Welcome to Car Rental" />

        <!--  user display  -->
        <TextBlock
            x:Name="userName"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Light"
            Opacity="1"
            Text="name" />

        <!--  options  -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  option for making a reservation  -->
            <Border
                Grid.Row="0"
                Width="200"
                Height="50"
                Background="#3087ED"
                CornerRadius="10">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="Make a reservation"
                    Foreground="#fff"
                    Tag="1" />
            </Border>

            <!--  option for viewing the reservations  -->
            <Border
                Grid.Row="1"
                Width="200"
                Height="50"
                Background="#3087ED"
                CornerRadius="10">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="View all reservations"
                    Foreground="#fff"
                    Tag="2" />
            </Border>

            <!--  option for viewing the cars  -->
            <Border
                Grid.Row="2"
                Width="200"
                Height="50"
                Background="#3087ED"
                CornerRadius="10">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="view all cars"
                    Foreground="#fff"
                    Tag="3" />
            </Border>
        </Grid>
    </Grid>
</Window>
