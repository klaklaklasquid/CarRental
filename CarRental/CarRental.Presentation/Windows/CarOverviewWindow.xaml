<Window
    x:Class="CarRental.Presentation.Windows.CarOverviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CarRental.Presentation.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Car Overview"
    Width="900"
    Height="600"
    MinWidth="750"
    MinHeight="500"
    Background="White"
    Closing="Window_Closing"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#3087ED"
            Text="Car Overview" />

        <!--  Filter Establishments  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Filter Establishments" />
            <ListView
                x:Name="listViewEstablishment"
                Height="100"
                SelectionChanged="listViewEstablishment_SelectionChanged" />
        </StackPanel>

        <!--  Filter Date  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Filter Date" />
            <DatePicker
                x:Name="filterDate"
                FontSize="16"
                SelectedDateChanged="filterDate_SelectedDateChanged" />
        </StackPanel>

        <!--  List of Cars  -->
        <ListView
            x:Name="listViewCars"
            Grid.Row="3"
            Margin="0,10,0,10" />

        <!--  Button  -->
        <Border
            Grid.Row="4"
            Width="250"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Background="#3087ED"
            CornerRadius="8">
            <Button
                Padding="10"
                Background="Transparent"
                BorderThickness="0"
                Click="Button_Click"
                Content="Make Markdown"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White" />
        </Border>
    </Grid>
</Window>
