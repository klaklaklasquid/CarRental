<Window
    x:Class="CarRental.Presentation.Windows.CheckReservationsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CarRental.Presentation.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CheckReservationsWindow"
    Width="600"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  Title  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Light"
                Text="Reservation list" />

            <!--  filters  -->
            <StackPanel Grid.Row="1">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Search on name" />

                <TextBox
                    x:Name="searchName"
                    FontSize="20"
                    FontWeight="Light"
                    TextAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Search on date" />
                <DatePicker
                    x:Name="searchDate"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Light" />
            </StackPanel>

            <StackPanel Grid.Row="3">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Light"
                    Text="Search on establishment" />

                <ListView x:Name="establishmentList" PreviewMouseDown="establishmentList_PreviewMouseDown" />
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <!--  ListView of reservations  -->
            <ListView x:Name="reservationList" />
            <Button
                Grid.Row="1"
                Background="#3087ED"
                BorderThickness="0"
                Click="Button_Click"
                Content="Cancel reservation"
                FontSize="14"
                FontWeight="Light"
                Foreground="#fff" />
        </Grid>
    </Grid>
</Window>
